include mixins

doctype html
html(lang="en")
  head
    title htmx-tabular
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous")
    link(href="/styles.css", rel="stylesheet")
  body
    .container
      h1 htmx-tabular
      form
        .mb-4
          .col-6
            input(type="text" placeholder="Search..." class="form-control form-control-lg" )
      p 100 results found
      table#tbl-food.table
        thead
          tr.table-dark
            //th 
              a(href="/?sortBy=name&direction=" + reverse) 
                | Name
                if direction === 'asc'
                  |  &darr;
                else
                  |  &uarr;
            +thsort('name', reverse, sortBy) Name
            +thsort('stars', reverse, sortBy) Stars
            +thsort('price', reverse, sortBy) Price
            +thsort('category', reverse, sortBy) Category
        tbody.table-striped
          each r in restaurants
            tr
              td= r.name
              td= r.stars
              td= r.price
              td= r.category
      nav(aria-label='Page navigation example')
        - var n = 0;
        ul.pagination
          while n < totalPages
            li.page-item(class={active: start/10 === n })
              a.page-link(href='/?start=' + (n * 10) + '&direction=' + direction) #{++n}

    script(src="https://unpkg.com/htmx.org@1.3.1")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous")
