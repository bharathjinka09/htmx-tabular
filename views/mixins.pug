mixin thsort(name,reverse,sortBy)
  th 
    if sortBy === name
      a(href="/?sortBy=" + name + "&direction=" + reverse) 
        block
        if reverse === 'desc'
          |  &darr;
        else
          |  &uarr;
    else
      a(href="/?sortBy=" + name + "&direction=" + reverse) 
        block

mixin star-rating(rating)
  - var n = 0;
  while n < rating
    | &starf;
    - n++

mixin dollars(price)
  - var n = 0;
  while n < price
    | $
    - n++
